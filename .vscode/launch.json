    "version": "0.2.0",
    "configurations": [
        {
            "name": "test: simple",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/simple/makefile.py",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/tests/simple",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "test: cxx/simple",
            "type": "python",
            "request": "launch",
            "module": "pymake",
            "justMyCode": true,
            "args": [
                "-d",
                "${workspaceFolder}/tests/cxx/simple"
            ],
            "cwd": "${workspaceFolder}/build/tests/cxx/simple",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "preLaunchTask": "makeTestDirs"
        }
    ]
}