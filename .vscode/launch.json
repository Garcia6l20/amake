    "version": "0.2.0",
    "inputs": [
        {
            "id": "makefileCommand",
            "description": "Select a command",
            "type": "pickString",
            "options": [
                {
                    "label": "Build",
                    "value": "build"
                },
                {
                    "label": "Clean",
                    "value": "clean"
                },
                {
                    "label": "Run",
                    "value": "run"
                },
                {
                    "label": "Test",
                    "value": "test"
                },
                {
                    "label": "List targets",
                    "value": "list-targets"
                },
                {
                    "label": "Install",
                    "value": "install"
                },
                {
                    "label": "Configure",
                    "value": "configure"
                },
            ]
        },
        {
            "id": "test",
            "description": "Select a test",
            "type": "pickString",
            "options": [
                {
                    "label": "Generators",
                    "value": "simple"
                },
                {
                    "label": "CXX/simple",
                    "value": "cxx/simple"
                },
                {
                    "label": "CXX/library",
                    "value": "cxx/library"
                },
                {
                    "label": "CXX/qt",
                    "value": "cxx/qt"
                },
                {
                    "label": "CXX/modules",
                    "value": "cxx/modules"
                },
            ]
        },
        {
            "id": "unitTestName",
            "description": "Enter a unit test matcher",
            "type": "promptString",
            "default": ""
        }
    ],
    "configurations": [
        {
            "name": "examples",
            "type": "python",
            "request": "launch",
            "module": "pymake",
            "justMyCode": true,
            "args": [
                "${input:makefileCommand}",
                "-v"
            ],
            "cwd": "${workspaceFolder}/examples",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYMAKE_BUILD_PATH": "./build"
            }
        },
        {
            "name": "configure-test",
            "type": "python",
            "request": "launch",
            "module": "pymake",
            "justMyCode": true,
            "args": [
                "configure",
                "-t", "default",
                "-s", "target.cxx_flags=-Wall",
                "-s", "target.cxx_flags+=-Wextra;-Werror",
                "-s", "target.cxx_flags-=-Wextra",
                "-s", "target.cxx_flags-=*",
                "-s", "build_type=release",
                "-o", "simple.greater=wonderfull !"
            ],
            "cwd": "${workspaceFolder}/examples",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYMAKE_BUILD_PATH": "./build"
            }
        },
        {
            "name": "pymake.io",
            "type": "python",
            "request": "launch",
            "module": "pymake",
            "justMyCode": true,
