{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "id": "makefileCommand",
            "description": "Select a command",
            "type": "pickString",
            "options": [
                {"label": "Build", "value": "build"},
                {"label": "Clean", "value": "clean"},
                {"label": "Run", "value": "run"},
            ]
        }
    ],
    "configurations": [
        {
            "name": "tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/makefile.py",
            "justMyCode": true,
            "args": ["-d", "${input:makefileCommand}"],
            "cwd": "${workspaceFolder}/tests",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "test: cxx/simple",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/cxx/simple/makefile.py",
            "justMyCode": true,
            "args": ["-d", "${input:makefileCommand}"],
            "cwd": "${workspaceFolder}/tests/cxx/simple",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}