{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "id": "makefileCommand",
            "description": "Select a command",
            "type": "pickString",
            "options": [
                {"label": "Build", "value": "build"},
                {"label": "Clean", "value": "clean"},
                {"label": "Run", "value": "run"},
            ]
        },
        {
            "id": "test",
            "description": "Select a test",
            "type": "pickString",
            "options": [
                {"label": "Generators", "value": "simple"},
                {"label": "CXX/simple", "value": "cxx/simple"},
                {"label": "CXX/library", "value": "cxx/library"},
                {"label": "CXX/qt", "value": "cxx/qt"},
                {"label": "CXX/modules", "value": "cxx/modules"},
            ]
        }
    ],
    "configurations": [
        {
            "name": "tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/makefile.py",
            "justMyCode": true,
            "args": ["-v", "-m", "debug", "${input:makefileCommand}"],
            "cwd": "${workspaceFolder}/tests",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "single test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/${input:test}/makefile.py",
            "justMyCode": true,
            "args": ["-v", "${input:makefileCommand}"],
            "cwd": "${workspaceFolder}/tests/${input:test}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "cxx/modules test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/cxx/modules/makefile.py",
            "justMyCode": true,
            "args": ["-v", "${input:makefileCommand}"],
            "cwd": "${workspaceFolder}/tests/cxx/modules",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "cxx test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/cxx/makefile.py",
            "justMyCode": true,
            "args": ["-v", "${input:makefileCommand}"],
            "cwd": "${workspaceFolder}/tests/cxx",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "cxx/simple test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/cxx/simple/makefile.py",
            "justMyCode": true,
            "args": ["-v", "${input:makefileCommand}"],
            "cwd": "${workspaceFolder}/tests/cxx/simple",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "cxx/libraries test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/cxx/libraries/makefile.py",
            "justMyCode": true,
            "args": ["-v", "${input:makefileCommand}"],
            "cwd": "${workspaceFolder}/tests/cxx/libraries",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "cxx/smc test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/cxx/smc/makefile.py",
            "justMyCode": true,
            "args": ["-v", "${input:makefileCommand}"],
            "cwd": "${workspaceFolder}/tests/cxx/smc",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}